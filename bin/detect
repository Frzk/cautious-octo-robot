#!/usr/bin/env bash
# bin/detect <build-dir>

build_dir="${1}"

if [[ -n "${WAR_PATH}" && -f "${build_dir}/${WAR_PATH}" ]] ; then
   [...]
elif [ -n "$( find "${build_dir}" -maxdepth 1 -name "*.war" -type f )" ] ; then
  [...]
fi
then
    if [ -f "${build_dir}/${WAR_PATH}" ]
    then
        echo "WAR"
        exit 0
    fi
else
    if [ -n "$( find "${build_dir}" -maxdepth 1 -name "*.war" -type f )" ]
    then
        echo "WAR"
        exit 0
    fi
fi

echo "no"
exit 1
